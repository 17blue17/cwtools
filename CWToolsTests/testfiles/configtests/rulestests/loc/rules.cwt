types = {
    type[ship_size] = {
        path = "game/common/ship_sizes"
        localisation = {
            name = "$"
            description = "$_desc"
            ## required
            required = "$_required"
            subtype[sub] = {
                subsub = "$_sub"
                ## required
                subreq = "$_sub_req"
            }
        }
        subtype[sub] = {
            subtype = yes
        }
    }
    type[event] = {
        path = "game/events"
    }
}

ship_size = {
    ## cardinality = 0..1
    subtype = bool
}

event = {
    ## cardinality = 0..inf
    type_loc_ref = <ship_size>
}
